{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "CommonJS",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nx-demo-app/client/user-list": ["libs/client/user-list/src/index.ts"],
      "@nx-demo-app/design-system": ["libs/design-system/src/index.ts"],
      "@nx-demo-app/shared-graphql-interface": [
        "libs/shared-graphql-interface/src/index.ts"
      ],
      "@nx-demo-app/shared-graphql-interface/schema": [
        "libs/shared-graphql-interface/src/lib/graphql.schema.json"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
